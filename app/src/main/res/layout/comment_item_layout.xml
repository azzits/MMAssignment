<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal"
    android:paddingTop="@dimen/field_padding_normal"
    android:paddingBottom="@dimen/field_padding_normal"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/blank_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/field_padding_normal"
        android:id="@+id/imageView" />

    <TextView

        style="@style/ArticleItemTitleTextStyle.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/txtCommentDate"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_marginTop="5dp"
        style="@style/ArticleItemTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCommentDate"
        android:layout_alignStart="@+id/txtCommentDate"
        android:id="@+id/txtComment" />
</RelativeLayout>